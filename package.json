{
  "name": "daily-grid",
  "version": "1.0.0",
  "type": "module",
  "description": "Daily Grid - Calm, focused daily puzzles",
  "scripts": {
    "dev": "wrangler pages dev . --d1 DB=daily-grid-db --kv PUZZLE_CACHE",
    "deploy": "wrangler pages deploy .",
    "db:init": "wrangler d1 execute daily-grid-db --file=./scripts/init-db.sql",
    "db:init:local": "wrangler d1 execute daily-grid-db --local --file=./scripts/init-db.sql"
  },
  "devDependencies": {
    "wrangler": "^3.0.0"
  }
}
